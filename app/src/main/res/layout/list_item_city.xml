<card_view:android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="5dp">
    <FrameLayout
        android:id="@+id/city_list_item_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/city_list_item_nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="City name"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/city_list_item_iconImageView"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:layout_height="48dp"
            android:layout_width="48dp"/>
        <TextView
            android:id="@+id/city_list_item_tempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City temperature"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"/>
        </LinearLayout>
    </FrameLayout>
</card_view:android.support.v7.widget.CardView>