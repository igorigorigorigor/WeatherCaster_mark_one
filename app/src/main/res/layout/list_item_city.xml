<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:layout_margin="2dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingLeft="15dp"
            android:id="@+id/city_list_item_iconImageView"
            android:src="@drawable/w01d"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_list_item_nameTextView"
            android:text="City name"
            android:layout_toRightOf="@+id/city_list_item_iconImageView"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            android:textSize="15sp"
            android:paddingRight="15dp"
            android:id="@+id/city_list_item_tempTextView"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>